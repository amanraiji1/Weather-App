<%- include("./partials/header") -%>
          <!-- Title -->
    
          <div class="row">
    
            <div class="col-lg-4 section1">
                <p>Welcome to weather app</p>
              <h1 class="big-heading">Get the Latest <span id="weather">Weather</span> Info of Your City</h1>
              <form id="search-form" action="/" method="post">
              <input type="search" name="cityName" id="search-input" placeholder="Enter City Name" required autocomplete="off">
               <br>
              <button type="submit" id="search-button">Search</button>
           
          </form>
           </div>
    
            <div class="col-lg-4 section1">
                <div id="carouselExampleSlidesOnly" class="carousel slide" data-ride="carousel" data-interval="1500">
                    <div class="carousel-inner">
                      <div class="carousel-item active">
                        <img class = "Card" src="images/Card1.svg" alt="First slide">
                      </div>
                      <div class="carousel-item">
                        <img  class = "Card" src="images/Card2.svg" alt="Second slide">
                      </div>
                      <div class="carousel-item">
                        <img class = "Card" src="images/Card3.svg" alt="Third slide">
                      </div>
                    </div>
            
            </div>
            
           </div>
          </div>
        
      </section>
